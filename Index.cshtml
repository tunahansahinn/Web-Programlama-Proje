@model IEnumerable<BarisKuafor.Models.Randevu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RandevuZamani)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Berberler)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adiniz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefonNumaraniz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beceriler)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Okeyleme)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RandevuZamani)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Berberler.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adiniz)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefonNumaraniz)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beceriler.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Okeyleme)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
